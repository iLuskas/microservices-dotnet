@model GeekShopping.Web.Models.ProductModel

<form asp-action="ProductDelete">
    <br />

    <div class="container border p-3">
        <h1 class="text-primary">Deletar Produto</h1>

        <hr />

        <div class="row">
            <input asp-for="Id" hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Name" class="custom-control-label pt-2" style="font-size:20px;">Nome:</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" disabled />
            </div>
            <div class="col-2">
                <label asp-for="CategoryName" class="control-label pt-2" style="font-size:20px;">Categoria:</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" class="form-control" disabled />
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;">Descrição:</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" class="form-control" rows="5" disabled></textarea>
            </div>
            <div class="col-2">
                <label asp-for="ImageURL" class="control-label pt-2" style="font-size:20px;">Imagem:</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageURL" class="form-control" disabled />
            </div>
            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size:20px;">Preço</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" class="form-control" disabled />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn-primary btn form-control ">Voltar a Lista</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Deletar" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>